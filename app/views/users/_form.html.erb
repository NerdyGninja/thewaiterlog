<div class="container">
  <hr>
  <%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :first_name, class: 'sr-only' %>
      <div class="input-group mb-2">
        <div class="input-group-prepend" id="first_name-addon">
          <span class="input-group-text">First Name</span>
        </div>
        <%= form.text_field :first_name, class: 'form-control form-control-lg', 'aria-label': 'first_name', 'aria-describedby': 'first_name-addon', placeholder: 'John \ Jane' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :last_name, class: 'sr-only' %>
      <div class="input-group mb-2">
        <div class="input-group-prepend" id="last_name-addon">
          <span class="input-group-text">Last Name</span>
        </div>
        <%= form.text_field :last_name, class: 'form-control form-control-lg', 'aria-label': 'last_name', 'aria-described-by': 'last_name-addon', placeholder: 'Doe' %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>