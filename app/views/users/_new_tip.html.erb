  <div class="top-buffer text-center">
    <h1>Add An Income</h1>
    <hr>
  </div>

  <%= form_for([@user, @user.tips.build]) do |f| %>
  <p>
    <%= f.label :date "date" %>
    <%= f.date :date %>
  </p>

  <p>
    <%= f.label :hours "hours" %>
    <%= f.integer :hours %>
  </p>

  <p>
    <%= f.label :amount %>
    <%= f.decimal :amount %>
  </p>

  <p>
    <%= f.label :comment %>
    <%= f.tex_area :comment %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <% end %>